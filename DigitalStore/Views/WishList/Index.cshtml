@model IEnumerable<DigitalStore.Models.EF.Wishlist>
@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" type="text/css" href="~/styles/main_styles.css">
<style>
    .news_section_container {
        margin-top: 120px;
        width: 75%;
    }


    .row-item-new {
        margin-bottom: 20px;
    }

    .title-news {
        font-size: 40px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom: 25px;
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%;
    }
</style>

<div class="container news_section_container">
    <div class="row">
        <div class="col-md-12 ">
            <h1 class="title-news"> Sản phẩm yêu thích </h1>
        </div>
    </div>
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <div class="row row-item-new">
                <div class="col-md-3">
                    <div class="img-box">
                        <a href="" title="@item.Game.Name"><img src="@item.Game.Image" alt="@item.Game.Name" style="border: 1px solid #fff; border-radius: 15px;" /></a>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="content-box">
                        <h3><a href="/@item.Game.Alias-n@(item.Game.Id)" style="color: #162938;">@item.Game.Name</a></h3>
                        <div class="description-box">
                            @item.Game.Description
                        </div>
                    </div>
                </div>
                <div class="col-md-1">
                    <a href="#" data-id="@item.Id" class="btn btn-danger">Xóa</a>
                </div>
            </div>
        }
    }
</div>
